//- Use inside a navbar
.isic-current-user-text
  if (currentUser)
    ul.nav.navbar-nav.navbar-right
      li.navbar-brand.hidden-xs.isic-portrait-wrapper
      li.dropdown
        a.dropdown-toggle.isic-header-item(
          href='#',
          data-toggle='dropdown')
          | #{currentUser.name()}&nbsp;
          span.caret
        ul.dropdown-menu
          li
            a.g-my-settings
              i.icon-cog
              | My account
          li.divider
          li
            a.g-logout
              i.icon-logout
              | Log out
  else
    .navbar-text.navbar-right.isic-login-link-wrapper
      a.g-register.isic-login-link Register
      |  or
      a.g-login.isic-login-link  Log In
        i.icon-login
