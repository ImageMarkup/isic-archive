/* page-wide styles */
#galleryContent {
  position: relative;
  min-height: 12em;
  height: calc(100vh - 13em);
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  -ms-user-select: none;
  -moz-user-select: none;
  -webkit-user-select: none;
}
#galleryContent .flexRow {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
}
#galleryContent .flexColumn {
  display: flex;
  flex-direction: column;
  height: 100%;
  flex-wrap: nowrap;
}
#galleryContent .fixedWidth {
  min-width: 32em;
  max-width: 32em;
  flex-basis: 32em;
  overflow-y: auto;
}
#galleryContent .spacer,
#galleryContent .growing {
  flex-grow: 1;
}

#galleryContent .pane {
  position: relative;
  padding: 0.5em;
  margin: 0.5em;
  border: 1px solid #DDDDDD;
  border-radius: 3px;
}

