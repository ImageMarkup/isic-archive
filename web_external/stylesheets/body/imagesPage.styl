$overviewColor = #a8ddb5;
$filteredSetColor = #4eb3d3;
$pageColor = #08589e;

#galleryContent
    position relative
    min-height 12em
    height calc(100vh - 13em)
    display flex
    width 100%
    flex-wrap nowrap
    -ms-user-select none
    -moz-user-select none
    -webkit-user-select none

    .flexRow
        display flex
        width 100%
        flex-wrap nowrap

    .flexColumn
        display flex
        flex-direction column
        height 100%
        flex-wrap nowrap

    .fixedWidth
        min-width 32em
        max-width 32em
        flex-basis 32em
        overflow-y auto

    .spacer
    .growing
        flex-grow 1

    .pane
        position relative;
        padding 0.5em;
        margin 0.5em;
        border 1px solid #DDDDDD;
        border-radius 3px;

    .button
        margin 0.5em
        cursor pointer
        border 1px solid transparent
        border-radius 3px
        padding 3px

        img
            width 1em
            height 1em

        &.selected
            img
                -webkit-filter url(#recolorImageTo00ABFF)
                filter url(#recolorImageTo00ABFF)

        &:hover
            border 1px solid #E2E2E2
            background linear-gradient(to bottom, #fff 60%, #f6f6f6 100%)

            img
                -webkit-filter url(#recolorImageTo444499)
                filter url(#recolorImageTo444499)

        &.disabled
        &.disabled:hover
            border 1px solid transparent
            background transparent
            cursor default

            img
                -webkit-filter url(#recolorImageToCCCCCC)
                filter url(#recolorImageToCCCCCC)

    /* Study pane */
    #isic-images-studyPane
        /*! NoOp */

    /* Study text pane */
    #isic-images-studyTextPane
        /*! NoOp */

    /* Image wall */
    #isic-images-imageWall
        overflow-y auto
        overflow-x hidden
        min-width 32em

        image
            cursor pointer

    rect#highlightOutline
        fill none
        stroke #00ABFF
        stroke-width 4px

    /* Paging pane */
    #isic-images-pagingPane
        flex-basis 6em
        height 6em
        max-height 6em
        min-height 6em
        display flex
        flex-wrap nowrap
        align-items center

        #isic-images-pagingTools
            align-items: center;

            #isic-images-pageSizeControl
                margin 1em
                white-space nowrap

                label
                    margin 0
                    vertical-align middle

                input
                    margin-left 1em
                    text-align center
                    width 4em

            .overview
                font-weight bolder
                color: $overviewColor

            .filteredSet
                font-weight bolder
                color: $filteredSetColor

            .page
                font-weight bolder
                color: $pageColor

        #isic-images-pagingBars
            position relative

            .bar
                position absolute
                height 1em
                top 0em

            .filteredSet.bar
                background-color $filteredSetColor

            .page.bar
                background-color $pageColor

    /* Histogram pane */
    #isic-images-histogramPane
        /*! NoOp */

    /* Image details pane */
    #isic-images-imageDetailsPane
        .button
            position absolute
            top 0em
            right 0em
