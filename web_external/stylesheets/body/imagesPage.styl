/* Image wall */
#galleryContent #imageWall {
  overflow-y: auto;
  overflow-x: hidden;
  min-width: 32em;
}
#galleryContent #imageWall image {
  cursor: pointer;
}
#galleryContent #imageWall rect#highlightOutline {
  fill: none;
  stroke: #00ABFF;
  stroke-width: 4px;
}

/* Paging pane */
#galleryContent #pagingPane {
  flex-basis: 3em;
  height: 3em;
  max-height: 3em;
  min-height: 3em;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
#galleryContent #pagingPane .button {
  margin: 0.5em;
  cursor: pointer;
  border: 1px solid transparent;
  border-radius: 3px;
  padding: 3px;
}
#galleryContent #pagingPane .button img {
  width: 1em;
  height: 1em;
}
#galleryContent #pagingPane .button.selected img {
  -webkit-filter: url(#recolorImageTo00ABFF);
  filter: url(#recolorImageTo00ABFF);
}
#galleryContent #pagingPane .button:hover {
  border: 1px solid #E2E2E2;
  background: linear-gradient(to bottom, #fff 60%, #f6f6f6 100%);
}
#galleryContent #pagingPane .button:hover img {
  -webkit-filter: url(#recolorImageTo444499);
  filter: url(#recolorImageTo444499);
}
#galleryContent #pagingPane #pageSizeControl {
  margin: 1em;
  white-space: nowrap;
}
#galleryContent #pagingPane #pageSizeControl label {
  margin: 0px;
  vertical-align: middle;
}
#galleryContent #pagingPane #pageSizeControl input {
  margin-left: 1em;
  text-align: center;
  width: 4em;
}

