/* page-wide styles */
#galleryContent {
  position: relative;
  width: 100%;
  min-height: 12em;
  height: calc(100vh - 13em);
  display: flex;
  flex-wrap: nowrap;
}

#galleryContent .column {
  display: flex;
  flex-direction: column;
  height: 100%;
}
#galleryContent .fixedWidth {
  min-width: 20em;
  max-width: 45em;
  flex-basis: 45em;
  overflow-y: auto;
}

#galleryContent .pane {
  position: relative;
  padding: 0.5em;
  margin: 0.5em;
  border: 1px solid #dddddd;
}

#galleryContent .spacer {
  flex-grow: 1;
}

