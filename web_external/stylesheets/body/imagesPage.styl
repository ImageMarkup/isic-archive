@import 'nib'

$overviewColor = #a8ddb5
$filteredSetColor = #4eb3d3
$pageColor = #08589e

$rolloverImageFilter = url(#recolorImageTo00ABFF)
$selectedImageFilter = url(#recolorImageTo444499)
$disabledImageFilter = url(#recolorImageToCCCCCC)

$dataAxisColor = #333333

#galleryContent
    position relative
    min-height 12em
    height calc(100vh - 13em)
    display flex
    width 100%
    flex-wrap nowrap

    .flexRow
        display flex
        width 100%
        flex-wrap nowrap

    .flexColumn
        display flex
        flex-direction column
        height 100%
        flex-wrap nowrap

    .fixedWidth
        min-width 32em
        max-width 32em
        flex-basis 32em
        overflow-y auto

    .spacer
    .growing
        flex-grow 1

    .pane
        position relative;
        padding 0.5em;
        margin 0.5em;
        border 1px solid #DDDDDD;
        border-radius 3px;

    .button
        margin 0.5em
        cursor pointer
        border 1px solid transparent
        border-radius 3px
        padding 3px

        img
            width 1em
            height 1em

        &.selected
            img
                -webkit-filter $selectedImageFilter
                filter $selectedImageFilter

        &:hover
            border 1px solid #E2E2E2
            background linear-gradient(to bottom, #fff 60%, #f6f6f6 100%)

            img
                -webkit-filter $rolloverImageFilter
                filter $rolloverImageFilter

        &.disabled
        &.disabled:hover
            border 1px solid transparent
            background transparent
            cursor default

            img
                -webkit-filter $disabledImageFilter
                filter $disabledImageFilter

    /* Image wall */
    #isic-images-imageWall
        overflow-y auto
        overflow-x hidden
        min-width 32em

        image
            cursor pointer

        rect#highlightOutline
            fill none
            stroke #00ABFF
            stroke-width 4px

    /* Paging pane */
    #isic-images-pagingPane
        flex-basis 6em
        height 6em
        max-height 6em
        min-height 6em
        display flex
        flex-wrap nowrap
        align-items center
        user-select none

        #isic-images-pagingTools
            align-items: center;

            #isic-images-pageSizeControl
                margin 1em
                white-space nowrap

                label
                    margin 0
                    vertical-align middle

                input
                    margin-left 1em
                    text-align center
                    width 4em

            .overview
                font-weight bolder
                color: $overviewColor

            .filteredSet
                font-weight bolder
                color: $filteredSetColor

            .page
                font-weight bolder
                color: $pageColor

        #isic-images-pagingBars
            position relative

            .bar
                position absolute
                height 1em
                top 0em

            .filteredSet.bar
                background-color $filteredSetColor

            .page.bar
                background-color $pageColor

    /* Study and Histogram panes */
    #isic-images-studyPane
    #isic-images-histogramPane
        img.button:hover
        image.button:hover
            -webkit-filter $rolloverImageFilter
            filter $rolloverImageFilter

        img.button.disabled
        image.button.disabled
            -webkit-filter $disabledImageFilter
            filter $disabledImageFilter

        .overview
            fill $overviewColor

        .filteredSet
            fill $filteredSetColor

        .page
            fill $pageColor

        .attributeSection
            position relative
            width 100%

            .header
                width 100%
                display flex
                justify-content space-between
                align-items center
                line-height 2.0

                input.expander
                    position relative
                    left -999em
                    width 1em
                input.expander:before
                    display inline-block
                    position relative
                    content ''
                    cursor pointer
                    width 1em
                    height 1em
                    left 999em
                    top -0.25em
                input.expander:checked:before
                    -webkit-transform rotate(90deg)
                    transform rotate(90deg)

                img
                    width 1em
                    height 1em
                img.button
                    margin-left 0.5em

                input.expander:hover:before
                img.button:hover
                    cursor pointer
                    -webkit-filter $rolloverImageFilter
                    filter $rolloverImageFilter

                span
                    position relative
                    left 0.25em

                .title
                    font-size 20px

        .content
            position relative
            width 100%
            margin-bottom 1em
            overflow-x auto
            user-select none

            .collapsed
                display none

            .yAxis line
            .yAxis path
                fill none
                stroke $dataAxisColor
                stroke-width 1px

            .yAxisKnob
                cursor ns-resize
                fill $dataAxisColor
                stroke none

    /* Image details pane */
    #isic-images-imageDetailsPane
        .button
            position absolute
            top 0em
            right 0em
