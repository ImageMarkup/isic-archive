}

/* Study text pane */
#galleryContent #studyTextPane {

}

/* Image wall */
#galleryContent #imageWall {
  overflow-y: auto;
  overflow-x: hidden;
  flex-grow: 1;
}

/* Paging pane */
#galleryContent #pagingPane {
  flex-basis: 6em;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
#galleryContent #pagingPane img {
  width: 1.5em;
  height: 1.5em;
  margin: 1em;
  border: 1px solid transparent;
  border-radius: 3px;
  padding: 3px;
  cursor: pointer;
}
#galleryContent #pagingPane img.selected {
  filter: url(#recolorImageTo00ABFF);
}
#galleryContent #pagingPane img:hover {
  filter: url(#recolorImageTo444499);
  border: 1px solid #e2e2e2;
  background: linear-gradient(to bottom, #fff 60%, #f6f6f6 100%);
}
#galleryContent #pagingPane #pageSizeControl {
  margin: 1em;
  white-space: nowrap;
}
#galleryContent #pagingPane #pageSizeControl input {
  text-align: center;
  width: 6em;
}

