$title-font-size = 20px
$title-border-bottom = 1px solid #ddd
$title-margin-bottom = 5px
$table-header-background-color = #ddd
$table-header-font-weight = bold
$table-header-padding = 0 8px

.isic-image-details-container
  .isic-image-details-heading
    border-bottom $title-border-bottom
    margin-bottom $title-margin-bottom

    .isic-image-details-name
      font-size $title-font-size

    .isic-image-details-button
      margin-left 5px
      margin-bottom 3px

  .isic-image-details-table
    .isic-image-details-table-section-header
      background-color $table-header-background-color
      font-weight $table-header-font-weight
      text-transform uppercase
      padding $table-header-padding

    .isic-image-details-tag
      // Override Bootstrap label font attributes
      &.label
        font-size 100%
        font-weight normal
