@import '../imagesColors';

#isic-images-pagingPane
  flex-basis 6em
  height 6em
  max-height 6em
  min-height 6em
  display flex
  flex-wrap nowrap
  align-items center
  user-select none

  #isic-images-pagingTools
    align-items center

  .isic-images-paging-detailLabel
    &:not(#isic-images-loading)
      // This will be updated dynamically
      display none

    .isic-images-paging-detailLabel-page
      font-weight bolder
      color $pageColor

    .isic-images-paging-detailLabel-filteredSet
      font-weight bolder
      color $filteredSetColor

    .isic-images-paging-detailLabel-overview
      font-weight bolder
      color $overviewColor

  #isic-images-paging-downloadZip
    margin-left auto

  #isic-images-paging-bars
    position relative

    .isic-images-paging-bar
      position absolute
      height 1em
      top 0

    #isic-images-paging-bar-filteredTotal
      z-index 1
      background-color $filteredSetColor
      left 0
      width 100%

    #isic-images-paging-bar-pageTotal
      z-index 2
      background-color $pageColor
      // This will be updated dynamically
      left 0
      width 0
