.isic-form-page.isic-terms-acceptance
  .isic-form-container
    .isic-form-group
      h3 Terms of Use
      #isic-terms-agreement.isic-legal-container
        .isic-legal-content
          include legal/terms_of_use.html

      .isic-terms-agreement-link-container
        a.isic-terms-agreement-link(href="#{documentsRoot}/Terms of Use.txt" download="Terms of Use.txt")
          i.icon-doc-text
          | Download as text
        a.isic-terms-agreement-link(href="#{documentsRoot}/Terms of Use.pdf" download="Terms of Use.pdf")
          i.icon-file-pdf
          | Download as PDF

      .isic-terms-agreement-button-container.btn-toolbar
        button#isic-terms-accept.btn.btn-primary.btn-md I Accept
        button#isic-terms-reject.btn.btn-primary.btn-md I Decline
