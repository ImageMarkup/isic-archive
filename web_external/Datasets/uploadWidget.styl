.isic-upload-description-container
  margin-top 10px

.isic-upload-container
  margin 5px 0
  h4
    font-size 14px
    font-weight bold
    color #eee

  .g-drop-zone
    width 40%
    text-align center
    box-shadow 0 2px 5px rgba(0, 0, 0, 0.2)
    background-color #5cb897
    border 1px solid #4a8
    height 30px
    line-height 100%
    padding 7px 22px 5px 17px
    font-size 14px
    font-weight normal

    &:hover
      background-color #6cc8a7
      background linear-gradient(top, #6cc8a7 50%, #5cb897 100%)

    &:active
      background #6cc8a7
      box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

    &.g-dropzone-show
      background white
      border 2px dashed #bbb
      box-shadow none
      height 60px
      // Center content horizontally and vertically
      display flex
      align-items center
      justify-content center

.isic-upload-widget-container
  padding 10px 0
  text-align left

  .g-dialog-subtitle
    display none

.isic-upload-reset-container
  padding 10px 0

.isic-upload-list
  padding-bottom 10px
